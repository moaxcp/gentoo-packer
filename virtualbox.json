{
  "builders": [
    {
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 30720,
      "guest_additions_mode": "disable",
      "guest_os_type": "Gentoo_64",
      "headless": false,
      "iso_checksum": "d3e4d5b7da51a316bd0cb0db467adcdf8bdd5945b9569a199c305a0438d684e851b8749528c6aaee902685cf84001886aaf3589bed9a44535d9a9ebea4aab32a",
      "iso_checksum_type": "sha512",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "shutdown_command": "poweroff",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "20s",
      "type": "virtualbox-iso",
      "vm_name": "Gentoo",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    }
  ],
  "description": "Gentoo Installation (VirtualBox)",
  "post-processors": [
    {
      "output": "/tmp/gentoo-amd64-stage3-virtualbox.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/root",
      "source": "scripts/",
      "type": "file"
    },
    {
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
      ],
      "type": "shell",
      "inline": ["cd /root", "chmod u+x provision.sh", "./provision.sh"]
    },
    {
      "type": "shell",
      "inline": ["cd /root", "chmod u+x virtualbox.sh", "./virtualbox.sh"],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "inline": ["cd /root", "chmod u+x vmware.sh", "./vmware.sh"],
      "only": ["vmware-iso"]
    },
    {
      "type": "shell",
      "inline": ["cd /root", "chmod u+x cleanup.sh", "./cleanup.sh"]
    }
  ],
  "variables": {
    "password": "packer",
    "stage3": "20150618",
    "username": "root"
  }
}

